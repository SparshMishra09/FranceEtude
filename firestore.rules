rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===========================================
    // USERS COLLECTION
    // ===========================================
    match /users/{userId} {
      // Allow read: Any authenticated user can read user data
      allow read: if request.auth != null;
      
      // Allow create: Users can create their own document on signup
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow update: Users can update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow delete: Any authenticated user can delete (admin UI controls access)
      allow delete: if request.auth != null;
    }
    
    // ===========================================
    // SCORES COLLECTION
    // ===========================================
    match /scores/{scoreId} {
      // Allow read: Any authenticated user can read scores
      allow read: if request.auth != null;
      
      // Allow create: Any authenticated user can submit scores (students submitting assignments)
      allow create: if request.auth != null;
      
      // Allow update: Any authenticated user can update (for admin corrections)
      allow update: if request.auth != null;
      
      // Allow delete: Any authenticated user can delete (admin UI controls access)
      allow delete: if request.auth != null;
    }
    
    // ===========================================
    // ASSIGNMENTS COLLECTION (assignments & quizzes)
    // ===========================================
    match /assignments/{assignmentId} {
      // Allow read: Any authenticated user can read assignments
      allow read: if request.auth != null;
      
      // Allow create: Any authenticated user can create (admin UI controls access)
      allow create: if request.auth != null;
      
      // Allow update: Any authenticated user can update (admin UI controls access)
      allow update: if request.auth != null;
      
      // Allow delete: Any authenticated user can delete (admin UI controls access)
      allow delete: if request.auth != null;
    }
  }
}
